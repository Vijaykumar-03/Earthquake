pipeline {
    agent any

    stages {
        stage('clean data'){
        steps{
                cleanWs()
}
}
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Vijaykumar-03/Earthquake.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t earthquake-app:latest .'
            }
        }

        stage('Stop Old Container') {
            steps {
                sh '''
                docker stop earthqauke
                docker rm -f earthquake || true
                '''
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker run -d -name earthquake  -p 8000:80 -v vijay:/usr/share/nginx/html earthquake
                '''
            }
        }
    post {
    always{
 echo 'remove after execution pipeline'
    cleanWs()
}
}
    }
}
